<?xml version='1.0' encoding='utf-8'?>
<widget id="com.cisa.cisapp" version="2.0.17" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CISA APP</name>
    <description>CISA APP</description>
    <author email="jacruz@ci-sa.com.mx" href="https://ci-sa.com.mx">
        Jose Antonio Cruz Romero
    </author>

    <content src="splash.html" />
    <content original-src="splash.html" />

    <access origin="*" />
    <access origin="cdvfile://*" />
    
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    
    <preference name="scheme" value="http" />
    <preference name="hostname" value="localhost" />

    <platform name="android">
        <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
            <application android:networkSecurityConfig="@xml/network_security_config" android:usesCleartextTraffic="true" />
        </edit-config>
        
        <resource-file src="res/android/network_security_config.xml" target="app/src/main/res/xml/network_security_config.xml" />

        <preference name="StatusBarBackgroundColor" value="#124F90" />
        <preference name="orientation" value="portrait" />
        <preference name="iosExtraFilesystems" value="library,library-nosync,documents,documents-nosync,cache,bundle,root" />
        <preference name="AndroidExtraFilesystems" value="files,files-external,documents,sdcard,cache,cache-external,assets,root" />
        <preference name="AndroidPersistentFileLocation" value="Internal" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <preference name="AndroidInsecureFileModeEnabled" value="true" />
        <preference name="StatusBarOverlaysWebView" value="false" />

        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/icon/android/icon.png"/>
        <preference name="AndroidWindowSplashScreenBackground" value="#155169" />
        <preference name="AndroidWindowSplashScreenDuration" value="1000" />

        <icon src="res/icon/android/playstore.png" density="mdpi" />
        <icon src="res/icon/android/playstore.png" density="hdpi" />
        <icon src="res/icon/android/playstore.png" density="xhdpi" />
        <icon src="res/icon/android/playstore.png" density="xxhdpi" />
        <icon src="res/icon/android/playstore.png" density="xxxhdpi" />

        <allow-navigation href="http://tmshmo.ci-sa.com.mx/*" />
        <allow-navigation href="https://tmshmo.ci-sa.com.mx/*" />
        <access origin="http://tmshmo.ci-sa.com.mx" />
        <access origin="https://tmshmo.ci-sa.com.mx" />
    </platform>
    
</widget>
